<!DOCTYPE html>
<html>
<head>
<h1 align="center">Upload an image with Description:</h1> 
<link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
<meta charset=utf-8 />
<title>File Upload</title>
<style>
p{
FONT-SIZE: 18;
color:blue;
}
BODY{
BACKGROUND-COLOR: #EEE8AA;
}
article, aside, figure, footer, header, hgroup, menu, nav, section { display: block; }
</style>
</head>
<body>
<form name ="upload" id="upload_frm" enctype="multipart/form-data" method="post" action="/onUpload">
<script>
function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    .width(300)
                    .height(300);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

function Validate()
        {
            var name_element = document.getElementById('txt_name');
            var x = name_element.value;
           if(isNaN(x)||x.indexOf(" ")!=-1)
           {
              alert("Enter numeric value");
              return false; 
           }
           if (x.length<5 || x.length>5 )
           {
                alert("Please enter 5 digit Zip Code");
                return false;
           }
           
        }

</script>
<p>
Description of Ailing Infrastructure:<br>
<textarea name="txt_area" id="txt_area" rows="10" cols="50">
</textarea>
</p>
<p>
Please Choose a file to be Uploaded:<br>
<input type="file" name="image" id="image" accept="image/*" onchange="readURL(this);" /><br><br>
<img id="blah"/>
<br><br>
Zip Code:
<input type="text" name="txt_name" id="txt_name" size="30"/>
</p>
<div>
<input type="submit" name="submit" value="Upload File" onclick="Validate();"/>
</form>
</div>
</body>
</html>

